{
  "name": "@devjobs/design-system",
  "version": "1.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./src/theme.css"
  },
  "scripts": {
    "lint": "eslint \"**/*.ts*\" --max-warnings 0",
    "build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "devDependencies": {
    "@devjobs/eslint-config": "workspace:*",
    "@devjobs/jest-presets": "workspace:*",
    "@devjobs/typescript-config": "workspace:*",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@10.6.5",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "jest": {
    "preset": "@devjobs/jest-presets/node"
  }
}
